<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_secondary"
    tools:context="com.example.artauthentication.Peopleforanimal">

    <EditText
        android:id="@+id/infoother"
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:layout_marginTop="245dp"
        android:background="@null"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="false"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="People for Animals (PFA), also known as People for   Animals India, is India's largest animal welfare   organization. Maneka Gandhi, who started the organization in 1992, is its current chairperson.People for Animals regularly works with various other animals welfare and rights organizations such as Humane Society International (HSI) and People for the Ethical Treatment of Animals (PETA)"
        android:textColor="#FAE9E9"
        android:textSize="18sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/_imageother"
        android:layout_width="463dp"
        android:layout_height="180dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:background="#FFFFFF"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/explore1" />

    <TextView
        android:id="@+id/_tittleother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:text="FOUNDER : MANEKA GANDHI -1992"
        android:textColor="#DAA5B7"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoother"
        android:text="Type : Non-governmental organisation, non-profit"
        android:textColor="#F8E5CA"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_marginTop="7dp"
        android:text="Purpose : Animal rights and welfare"
        android:textColor="#F8E5CA"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginTop="7dp"
        android:text="Headquarters : New Delhi"
        android:textColor="#F8E5CA"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_marginTop="7dp"
        android:text="Key people : M.C Mehta, Raj Punjwani, Pritish Nandy, Manu Parekh, Ambika Shukla and Gauri Maulekhi"
        android:textColor="#F8E5CA"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_marginTop="7dp"
        android:autoLink="web"
        android:text="Official Website : www.peopleforanimalsindia.org"
        android:textColor="#F8E5CA"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:layout_marginTop="10dp"
        android:autoLink="web"
        android:text="Donate here : https://www.peopleforanimalsindia.org/online-donate-in-inr-usd.php"
        android:textColor="#F0F8F7"
        android:textSize="17sp"
        android:textStyle="bold|italic" />


</RelativeLayout>
