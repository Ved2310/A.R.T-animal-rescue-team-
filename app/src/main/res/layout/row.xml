<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_above="@+id/bottom_navigation"
    android:background="#DD5A5A"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"

    app:cardUseCompatPadding="true"

    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C90B0A0A"
        android:padding="16dp">

        <ImageView
            android:id="@+id/_image1"
            android:layout_width="382dp"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:background="@color/design_default_color_on_primary"
            app:srcCompat="@drawable/explore1" />

        <TextView
            android:id="@+id/_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FOUNDER : MANEKA GANDHI -1992"
            android:textColor="#DFFBFD"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:text="People for Animals regularly works with various other animals welfare and rights organizations such as Humane Society International (HSI) and People for the Ethical Treatment of Animals (PETA)."
            android:textColor="#F3D8F8"
            android:textSize="17dp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>


