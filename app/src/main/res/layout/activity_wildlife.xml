<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_secondary"
    tools:context="com.example.artauthentication.Peopleforanimal">

    <EditText
        android:id="@+id/infoother"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="240dp"
        android:background="@null"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="false"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="The Wildlife Trust of India (WTI) is an Indian nature conservation organisation to conserve wildlife and its habitat and to work for the welfare of individual wild animals. WTI has been credited for achieving conservation milestones such as Recovering population of critically endangered species, Translocation of Species, Reducing Human-Animal Conflict, Rescue and Rehabilitation of Animals including Elephants,Tigers,Leopards, One-horned Rhino and Bears.WTI was formed in November 1998 in response to the rapidly deteriorating condition of wildlife in India. WTI is a registered charity in India (under Section 12A of the Income Tax Act, 1961).  "
        android:textColor="#FAE9E9"
        android:textSize="17sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/_imageother"
        android:layout_width="393dp"
        android:layout_height="190dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:scaleType="center"
        app:srcCompat="@drawable/wildlife" />

    <TextView
        android:id="@+id/_tittleother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:text="Founder : Mrs.Ratty P.Javeri-1957"
        android:textColor="#DAA5B7"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/infoother"
        android:layout_marginTop="-1dp"
        android:text="Type : Non-profit organisation,Charitable trust."
        android:textColor="#F8E5CA"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@id/textView4"
        android:layout_marginTop="7dp"
        android:text="Services : Rapid action,Guardians of wild,Emergency rescue,Habitat protection,Right of passage,Species recovery."
        android:textColor="#F8E5CA"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginTop="7dp"
        android:text="Headquarters : Noida,Uttar-Pradesh,India."
        android:textColor="#F8E5CA"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_marginTop="7dp"
        android:autoLink="web"
        android:text="Official Website : www.wti.org.in"
        android:textColor="#F8E5CA"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:textColor="#F8E5CA"
        android:layout_below="@id/textView8"
        android:autoLink="web"
        android:text="Donate here : https://donation.wti.org.in/" />


</RelativeLayout>
