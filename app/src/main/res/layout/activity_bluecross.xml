<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_on_secondary"
    tools:context="com.example.artauthentication.Peopleforanimal">

    <EditText
        android:id="@+id/infoother"
        android:layout_width="400dp"
        android:layout_height="235dp"
        android:layout_marginTop="235dp"
        android:background="@null"
        android:cursorVisible="false"
        android:ems="10"
        android:enabled="false"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:text="The Blue Cross of India (BCI) is an animal welfare charity based in Chennai, India. It was established in 1959 by Captain V. Sundaram, his wife Usha and their three children, in Chennai (then Madras). The society was formally registered in 1964 under the Societies Registration Act.The organisation has received several national and international awards.On July 27, 1994, thirty years after the organisation's founding, it received a gift of 4 acres (16,000 m2) of land and a donation of â‚¹ 25,00,000. This land was purchased a few months later so that they could have a permanent shelter."
        android:textColor="#FAE9E9"
        android:textSize="16sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/_imageother"
        android:layout_width="380dp"
        android:layout_height="166dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="#FFFFFF"
        android:scaleType="center"
        app:srcCompat="@drawable/bluecross" />

    <TextView
        android:id="@+id/_tittleother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="Founder : V.SUNDARAM -1959"
        android:textColor="#DAA5B7"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/infoother"
        android:text="Type : Animal Welfare Organisation."
        android:textColor="#F8E5CA"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView4"
        android:layout_marginTop="7dp"
        android:text="Headquarters : Chennai,Tamil Nadu,India."
        android:textColor="#F8E5CA"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_marginTop="7dp"
        android:text="Headquarters : New Delhi"
        android:textColor="#F8E5CA"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_marginTop="7dp"
        android:text="Affiliations : RSPCA,WSPS"
        android:textColor="#F8E5CA"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_marginTop="7dp"
        android:autoLink="web"
        android:text="Official Website : bluecrossofindia.org"
        android:textColor="#F8E5CA"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:layout_below="@id/textView8"
        android:autoLink="web"
        android:textSize="18dp"
        android:textColor="#F0F8F7"
        android:textStyle="bold|italic"
        android:text="Donate here : https://bluecrossofindia.org/donate-now" />


</RelativeLayout>

