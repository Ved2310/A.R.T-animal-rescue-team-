<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/common_google_signin_btn_text_light_pressed"
    tools:context="com.example.artauthentication.AnotherActivity">

    <ImageView
        android:id="@+id/_imageother"
        android:layout_width="382dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        app:srcCompat="@drawable/explore1" />

    <TextView
        android:id="@+id/_tittleother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200sp"
        android:text="FOUNDER : MANEKA GANDHI -1992"
        android:textColor="#FFEB3B"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/infoother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:text="People for Animals regularly works with various other animals welfare and rights organizations such as Humane Society International (HSI) and People for the Ethical Treatment of Animals (PETA)."
        android:textColor="#FFFFFF"
        android:textSize="16dp" />


</RelativeLayout>
